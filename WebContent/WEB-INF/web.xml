		<description></description>
		<display-name>ControllerServlet</display-name>
		<servlet-name>ControllerServlet</servlet-name>
		<servlet-class>com.csc.servlet.ControllerServlet</servlet-class>
		<init-param>
			<param-name>ServerIP</param-name>
			<param-value>localhost</param-value>
		</init-param>
		<init-param>
			<param-name>PortNumber</param-name>
			<param-value>1521</param-value>
		</init-param>
		<init-param>
			<param-name>Sid</param-name>
			<param-value>xe</param-value>
		</init-param>
		<init-param>
			<param-name>DriverName</param-name>
			<param-value>oracle.jdbc.driver.OracleDriver</param-value>
		</init-param>
		<init-param>
			<param-name>UrlPart</param-name>
			<param-value>jdbc:oracle:thin:@</param-value>
		</init-param>
		<init-param>
			<param-name>Username</param-name>
			<param-value>harekam</param-value>
		</init-param>
		<init-param>
			<param-name>Password</param-name>
			<param-value>password</param-value>
		</init-param>
	</servlet>
